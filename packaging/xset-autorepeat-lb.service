[Unit]
Description=Turn off AutoRepeat for specific device keys
After=xorg.target
Requires=xorg.target
Before=e17.service

[Service]
Type=oneshot
# Keycodes:
# 122 = XF86AudioLowerVolume
# 123 = XF86AudioRaiseVolume
# 124 = XF86PowerOff
# 147 = XF86Phone
ExecStart=/usr/bin/xset -r 123 -r 122 -r 231 -r 177 -r 147 -r 166 -r 225 -r 124 -r 179 -r 220 -r 208 -r 209 -r 174 -r 171 -r 173 -r 176 -r 216 -r 234

[Install]
WantedBy=core-efl.target
